<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>iCal - Đặt lịch thông minh</title>
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/favicon.png">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Inter', 'sans-serif'],
          },
        },
      },
    }
  </script>

  <!-- Custom CSS -->
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
    .nav-link {
      @apply px-3 py-2 text-sm font-medium text-gray-700 hover:text-indigo-600 transition-colors duration-200;
    }
    .nav-link.active {
      @apply text-indigo-600 font-semibold;
    }
    .dropdown-menu {
      @apply absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none;
    }
    .dropdown-item {
      @apply block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 cursor-pointer;
    }
    nav a {
      position: relative;
      white-space: nowrap;
    }
    
    nav a::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 50%;
      width: 0;
      height: 2px;
      background: theme('colors.indigo.500');
      transition: all 0.3s ease;
      transform: translateX(-50%);
    }
    
    nav a:hover::after {
      width: 100%;
    }
  </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
  <!-- Navbar -->
  <nav class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <!-- Logo và Menu chính -->
        <div class="flex">
          <div class="flex-shrink-0 flex items-center">
            <a href="/" class="flex items-center space-x-2">
              <span class="text-2xl font-extrabold bg-gradient-to-r from-indigo-600 via-purple-500 to-pink-500 text-transparent bg-clip-text hover:opacity-80 transition-opacity">
                iCal
              </span>
              <span class="text-sm text-gray-500 hidden sm:inline-block">
                | Đặt lịch thông minh
              </span>
            </a>
          </div>
          
          <!-- Menu chính -->
          <div class="hidden sm:ml-8 sm:flex sm:items-center">
            <% if (user) { %>
              <nav class="flex space-x-1">
                <a href="/appointments" 
                  class="px-4 py-2 rounded-md text-sm font-medium transition-all duration-200
                    <%= path === '/appointments' 
                      ? 'bg-indigo-50 text-indigo-700 hover:bg-indigo-100' 
                      : 'text-gray-700 hover:text-gray-900 hover:bg-gray-50' %>">
                  <div class="flex items-center space-x-2">
                    <i class="far fa-calendar-alt"></i>
                    <span>Lịch hẹn</span>
                  </div>
                </a>
                
                <a href="/booking-links"
                  class="px-4 py-2 rounded-md text-sm font-medium transition-all duration-200
                    <%= path === '/booking-links'
                      ? 'bg-indigo-50 text-indigo-700 hover:bg-indigo-100'
                      : 'text-gray-700 hover:text-gray-900 hover:bg-gray-50' %>">
                  <div class="flex items-center space-x-2">
                    <i class="fas fa-link"></i>
                    <span>Liên kết đặt lịch</span>
                  </div>
                </a>
              </nav>
            <% } %>
          </div>
        </div>

        <!-- Menu phải -->
        <div class="flex items-center">
          <% if (user) { %>
            <!-- Notifications -->
            <button class="nav-link relative">
              <i class="far fa-bell text-lg"></i>
              <span class="absolute top-1 right-1 h-2 w-2 rounded-full bg-red-500"></span>
            </button>

            <!-- User dropdown -->
            <div class="ml-3 relative">
              <div>
                <button type="button" 
                  class="flex items-center max-w-xs rounded-full text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" 
                  id="user-menu-button" 
                  aria-expanded="false" 
                  aria-haspopup="true">
                  <span class="sr-only">Mở menu</span>
                  <img class="h-8 w-8 rounded-full" 
                    src="<%= user.picture || `https://ui-avatars.com/api/?name=${encodeURIComponent(user.name)}&background=random` %>" 
                    alt="<%= user.name %>">
                  <span class="ml-2 text-sm font-medium text-gray-700"><%= user.name %></span>
                  <i class="fas fa-chevron-down ml-2 text-xs text-gray-400"></i>
                </button>
              </div>

              <!-- Dropdown menu -->
              <div class="dropdown-menu hidden" 
                role="menu" 
                aria-orientation="vertical" 
                aria-labelledby="user-menu-button" 
                tabindex="-1">
                <a href="/profile" class="dropdown-item" role="menuitem">
                  <i class="far fa-user mr-2"></i>
                  Hồ sơ
                </a>
                <a href="/settings" class="dropdown-item" role="menuitem">
                  <i class="fas fa-cog mr-2"></i>
                  Cài đặt
                </a>
                <div class="border-t border-gray-100"></div>
                <a href="/auth/logout" class="dropdown-item text-red-600 hover:bg-red-50" role="menuitem">
                  <i class="fas fa-sign-out-alt mr-2"></i>
                  Đăng xuất
                </a>
              </div>
            </div>
          <% } else { %>
            <a href="/auth/google" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              <i class="fab fa-google mr-2"></i>
              Đăng nhập
            </a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Dropdown toggle script -->
  <script>
    const userMenuButton = document.getElementById('user-menu-button');
    const dropdownMenu = document.querySelector('.dropdown-menu');
    
    if (userMenuButton && dropdownMenu) {
      userMenuButton.addEventListener('click', () => {
        dropdownMenu.classList.toggle('hidden');
      });

      // Click outside to close
      document.addEventListener('click', (event) => {
        if (!userMenuButton.contains(event.target) && !dropdownMenu.contains(event.target)) {
          dropdownMenu.classList.add('hidden');
        }
      });
    }
  </script>

  <!-- Main Content Wrapper -->
  <main class="flex-grow">
</body>
</html> 